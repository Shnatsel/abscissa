[package]
name = "{{name}}"
authors = {{authors}}
version = "{{version}}"
edition = "{{edition}}"

[dependencies]
failure = "0.1"
gumdrop = "0.6"
lazy_static = "1"
serde = { version = "1", features = ["serde_derive"] }

[dependencies.abscissa]
version = "{{abscissa.version}}"
default-features = false
features = [{{~#each abscissa.cargo_features~}}
    "{{~this~}}"
    {{~#unless @last}}, {{/unless~}}
{{/each}}]

[dev-dependencies.abscissa]
version = "{{abscissa.version}}"
default-features = false
features = ["testing"]

{{#if patch_crates_io~}}
[patch.crates-io]
{{patch_crates_io}}
{{/if~}}
